<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightThemeSelector" parent="android:Theme.Light"/>
    <style name="titleFont" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#004100</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="titlePanel">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_weight">0.15</item>
    </style>
    <style name="answerText" parent="android:style/TextAppearance.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="answerPanel">
        <item name="android:background">@drawable/layout_green_border</item>
    </style>
    <style name="listItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="copyright">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
